<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= @name %></title>

</head>

<body>
  <h3><%= @name %></h3>
  <ul>
    <% @users_content[@name.to_sym].each do |key_name, value| %>
      <li>
        <% if value.class == Array %>
          <a><%= key_name %>: <%= value.join(', ') %></a>
        <% else %>
          <a><%= key_name %>: <%= value %></a>
        <% end %>
      </li>
    <% end %>
  </ul>

  <h5>List of other users</h5>
  <ul>
    <% @users_content.each do |key_name, _| %>
        <% if key_name != @name.to_sym %>
        <li>
          <a href="/<%= key_name %>"><%= key_name %></a>
        </li>
        <% end %>
    <% end %>
  </ul>

  <h5>There are <%= @users_content.size %> users with a total of <%= count_interests %> interests.</h5>
</body>
</html>
